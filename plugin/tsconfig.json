{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "ES2021"],
    "target": "ES2021",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
}
